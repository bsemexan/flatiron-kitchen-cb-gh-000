<%= form_for recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>


  <div class="field">
    <% if !ingredients.blank? %>
      <%= f.label :ingredients, 'Ingredients:' %><br>
      <%= f.collection_check_boxes :ingredient_ids, ingredients, :id, :name %>
    <% end %>
  </div>
  <%= f.submit %>
<% end %>
